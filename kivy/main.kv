#:import NoTransition kivy.uix.screenmanager.NoTransition

ScreenManager:
    MainWindow:
    GenerateDatapack:
    PathInvalid:
    TestWindow:

<PathInvalid@Screen>:
    name: "path_invalid"
    Label:
        text: "Invalid Path"

<GenerateDatapack>:
    name: "generate_datapack"
    transition: NoTransition()
    GridLayout:
        cols: 1
        Label:
            text: "Generate Empty Datapack"
        GridLayout:
            cols: 2

            Label:
                text: "pack_format"
            TextInput:
                id: pack_format
                multiline: False
            Label:
                text: "description"
            TextInput:
                id: description
                multiline: False
            Label:
                text: "Namespace"
            TextInput:
                id: namespace
                multiline: False
            Label:
                text: "Subfolder"
            TextInput:
                id: subfolder
                multiline: False
        GridLayout:
            cols: 4

            CheckBox:
                on_active: root.checkbox_click(self, self.active, root.optional_files, "test1")
            Label:
                text: "Test1"
            CheckBox:
                on_active: root.checkbox_click(self, self.active, root.optional_files, "test2")
            Label:
                text: "Test2"
        Button:
            text: "Generate"
            on_press: root.test()

<MainWindow>:
    name: "main"
    GridLayout:
        cols: 1
        Label:
            id: welcome_msg
